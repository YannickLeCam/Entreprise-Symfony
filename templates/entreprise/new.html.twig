{% extends 'base.html.twig' %}

{% block title %}
    {% if edit %}
        Edition entreprise
    {% else %}
        Nouvelle entreprise
    {% endif %}
{% endblock %}

{% block body %}
    {% if edit %}
        <h1>Edit d'une entreprise</h1>
    {% else %}
        <h1>Ajouter une entreprise</h1>
    {% endif %}


    {# {{form(form)}} #}
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    {{ form_row(form.raisonSociale) }}

    <div class="row">
        <div class="col" id="some-custom-id">
            {{ form_row(form.ville) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.cp) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.adresse) }}
        </div>
    </div>

    <div class="row">
        <div class="col" id="some-custom-id">
            {{ form_row(form.dateCreation) }}
        </div>
    </div>
{{ form_end(form) }}

{% endblock %}
